{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch TS Program",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run-script", "dev"],
        "skipFiles": [
          "<node_internals>/**"
        ],
        "preLaunchTask": "tsc: build - tsconfig.json",
        "outFiles": ["${workspaceFolder}/dist/**/*.js"],
        "sourceMaps": true,
        "console": "integratedTerminal"
      }
    ]
  }